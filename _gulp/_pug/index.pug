                    ol
                      li 2 курицы 
                      li Куриная нарезка
                      li Колбаса 
                      li Сосиски
                      li Вино или сок
                      li Кондитерские изделия
                    a(href='#form').btn.j-anchor Помочь
          // /end number

          // recommendation
          section#recommendation.recommendation
